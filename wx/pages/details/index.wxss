/* pages/details/index.wxss */
page{
  background-color: #FEFFFF;
  height: 100%;
}
.details-content{
  height: 100%;
}
/*消息栏*/

.bar-input>input{
  border-radius: 10rpx;
}
.bar-input>text{
  border-radius: 10rpx;
  color: #000000;
}
.bar-input>image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
}
/*主内容*/
.content-main{
  padding: 40rpx 50rpx 50rpx;
}
/*下边距*/
.content-main>view{
  margin-bottom: 24rpx;
}
.content-main>.details-user-info{
  margin-bottom: 32rpx;
}
.content-main>.details-object-image{
  margin-bottom: 32rpx;
}
.content-main>.details-object-button{
  margin-bottom: 42rpx;
}
/*用户信息*/

.info{
  margin-bottom: unset;
}
.details-tip{
  display: flex;
  align-items: center;
}
.details-tip>text{
  background-color: #FF3232;
  padding: 10rpx 28rpx;
  border-radius: 100rpx;
  color: #fff;
  box-shadow: 0 4rpx 6rpx rgba(255, 50, 50, 0.3);
  word-break: keep-all;
}
.describe-name>text,.describe-name>image{
  vertical-align: middle;
}
.describe-name>image{
  width: 36rpx;
  height: 36rpx;
  margin: 0 10rpx 0 14rpx;
}
.describe-name>text:first-child{
  max-width: 78%;
  display: inline-block;
  line-height: 40rpx;
  height: 40rpx;
  word-break: keep-all;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.describe-name>text:nth-child(3){
  color: #FFAC33;
  font-weight: normal;
}
.mess-info-describe{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.describe-mess{
  color: #888;
  margin-top: 4rpx;
}

/*物品特征*/
.details-object-features{
  background-color: #EDEBE8;
  padding: 14rpx 16rpx;
  margin: 0 -16rpx;
  border-radius: 12rpx;
}
.details-object-features text{
  line-height: 38rpx;
}
.details-object-features>view{
  display: flex;
  padding: 4rpx 0;
  color: #333;
}

.details-object-features-name{
  display: flex;
}
.details-object-features-name image{
  width: 36rpx;
  height: 36rpx;
}
.details-object-features-name text{
  word-break: keep-all;
  color: #4e4e4e;
  margin: 0 4rpx 0 12rpx;
}

