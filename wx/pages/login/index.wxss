/* pages/login/index.wxss */
page{
  height: 100%;
  background-color: #F1F2F3;
  position: relative;
  overflow: hidden;
  color: #333;
}
.bc{
  position: absolute;
  background-color: #FBBD08;
}
.top{
  top: 0;
  left: 0;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  transform: translate(-50%,-50%);
}
.bottom{
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  left: 0;
  bottom: 0;
  transform: translate(-50%,50%);
}
.right{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  top: 64%;
  right: 0;
  transform: translateX(50%);
}

.from{
  position: absolute;
  top: 32%;
  left: 50%;
  transform: translate(-50%,0);
  width: 90%;
  padding: 86rpx 46rpx 54rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.pick{
  height: 80rpx;
  width: 100%;
  margin-bottom: 26rpx;
  font-size: large;
  font-weight: bold;
  box-sizing: border-box;
  border-top: 2rpx solid #f5f6f7;
  border-bottom: 2rpx solid #f5f6f7;
}
.pickScroll{
  border-top: 2rpx solid #FBBD08;
  border-bottom: 2rpx solid #FBBD08;
}
.pick-view{
  height: 80rpx;
}
.pick-item{
  line-height: 80rpx;
  text-align: center;
  
}
.school{
  position: absolute;
  line-height: 80rpx;
  color: #666;
  padding-left: 24rpx;
}

.btn-login{
  font-weight: normal;
  font-size: large;
  background-color: #FBBD08;
  color: #111;
  margin: 40rpx 0 0 !important;
  width: 100% !important;
}
.forget{
  text-align: right;
  padding: 30rpx 24rpx 0;
  color: #333;
}
